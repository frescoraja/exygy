<h1>Project Tasks</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Status</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.description %></td>
        <td> <%= task.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'New Task', new_project_task_path %>
